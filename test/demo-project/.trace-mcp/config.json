{
  "version": "1.0.0",
  "producer": {
    "path": "./server",
    "language": "typescript",
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/node_modules/**",
      "**/dist/**"
    ]
  },
  "consumer": {
    "path": "./client",
    "language": "typescript",
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/node_modules/**",
      "**/dist/**"
    ]
  },
  "options": {
    "strict": false,
    "direction": "producer_to_consumer",
    "debounceMs": 300,
    "autoWatch": true
  }
}